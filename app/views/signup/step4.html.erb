<%= form_for @user, url: "/signup", method: :post do |f| %>
  <%= hidden_field_tag :current_step, 'step4' %>
  <%= f.fields_for :card do |b| %>
    card_number
    <%= b.text_field :card_number %>
    expiration_month
    <%= b.text_field :expiration_month %>
    expiration_year
    <%= b.text_field :expiration_year %> <br>
    security_code
    <%= b.password_field :security_code %>
  <% end %>
  <%= f.submit 'SignUp' %>
<% end %>
