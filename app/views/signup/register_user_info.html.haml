.header
  %ul.header__logo
    =link_to root_path do
      =image_tag "fmarket_logo_red", height: 52
  %ul.header__bar
    %ol.clearfix
      %li.active
        会員情報
        .progress-status
      %li.phone-page
        電話番号認証
        .progress-status
      %li.address-page
        住所入力
        .progress-status
      %li.credit-page
        支払い方法
        .progress-status
      %li.complete-page
        完了
        .progress-status

.main
  .information
    .information__head
      会員情報入力
    .information__main
      = form_for @user, url: register_cellphone_signup_index_path do |f|
        = f.label :nickname, "ニックネーム", class: 'nickname'
        %span.form-require 必須
        = f.text_field :nickname, class: 'information__main--form', placeholder: "例)  メルカリ太郎"
        = f.label :email, "メールアドレス", class: 'email'
        %span.form-require 必須
        = f.email_field :email, class: 'information__main--form', placeholder: "PC・携帯どちらでも可"
        = f.label :password, "パスワード", class: 'password'
        %span.form-require 必須
        = f.password_field :password, class: 'information__main--form', placeholder: '6文字以上'
        = f.label :password_confirmation, "パスワード（確認）", class: 'password-confirmation'
        %span.form-require 必須
        = f.password_field :password_confirmation, class: 'information__main--form', placeholder: '6文字以上'
        = f.submit "次へ進む", class: 'information__main--form--button'

