      .main--right_contents--inner__title.container
        %h3 クレジットカード一覧
      .main--right_contents--inner--list.container
        .main--right_contents--inner--list--box
          = image_tag 'card.svg', alt: '', class: ''
          .main--right_contents--inner--list--box__pay_num
            %p ************0000
          .main--right_contents--inner--list--box__pay_num
            %p 01/20
          .main--right_contents--inner--list--box__button
            = link_to '', {class: 'button'} do
              削除する
      .main--right_contents--inner__bottom
        = link_to '', {class: 'button'} do
          支払い方法について 
          = icon 'fas', 'angle-right', class: 'icon'
          
