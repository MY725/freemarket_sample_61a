= render 'shared/header'

-# ユーザー編集
.nav
  %ul.nav__lists
    %li.nav__lists__list
      = link_to root_path do
        %span メルカリ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--mypage
      %span マイページ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--plofile
      %span プロフィール

.main
  .main--profile_contents
    .main--profile_contents__title
      %h1 プロフィール
    .main--profile_contents__user_name
      = image_tag 'human.svg', alt: '', class: 'user_img'
      %input.user_name{value: "user name" }
    .main--profile_contents__user_message
      %textarea#profile_message{name: "profile_message", placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"}
      = link_to '', {class: 'button'} do
        変更する

  = render 'sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'