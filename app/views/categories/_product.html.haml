%li.content
  = link_to "/products/#{product.id}" do
    .content__image
      = image_tag first_image(product).image.to_s, size: "188x188", class: 'content__icon'
      .content__image--price
        = number_to_currency(product.price, unit: "ï¿¥", format: "%u%n")
    .content__item-name
      .content__item-name--text
        = product.name