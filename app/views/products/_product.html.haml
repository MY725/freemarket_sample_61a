  = link_to "/products/#{product.id}" do
    .toppage-main__image
      = image_tag product.image.url, height: '188px', width: '188px', class: 'toppage-main__icon'
      .toppage-main__image--price
        = number_to_currency(product.price, unit: "ï¿¥", format: "%u%n")
    .toppage-main__item-name
      .toppage-main__item-name--text
        = product.name