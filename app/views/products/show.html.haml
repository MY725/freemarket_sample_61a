      .item_detail_container--main--item_detail--left
        .item_detail_container--main--item_detail--left--top
          .bg_photo
            = image_tag '22574-17.jpg', class: ''
        .item_detail_container--main--item_detail--left--bottom
          .sm_photos
            = image_tag '22574-17.jpg', class: ''
