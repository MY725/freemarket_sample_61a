= render 'shared/header'

-# 取引中

.nav
  %ul.nav__lists
    %li.nav__lists__list
      = link_to root_path do
        %span メルカリ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--mypage
      %span マイページ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--exhibiting
      %span 出品した商品-取引中


.trading.clearfix
  .trading__right
    .trading__right--header
      %h2 出品した商品
    .trading__right--content
      %ul.trading-content__tabs
        %li.content__tabs
          = link_to exhibiting_products_path do
            %h3
              出品中
        %li.content__tabs.active
          %h3
            取引中
        %li.content__tabs
          = link_to sold_products_path do
            %h3
              売却済み
      .trading-content__lists
        - if @products.any?
          %ul.content__lists
            %li.content__lists--list
              - @products.each do |product|
                - if product.status.id == 2 || product.status.id == 6
                  .list
                    .list__image
                      = image_tag product.image
                    .list__text
                      .list__text--name
                        = product.name
                      - if product.status.id == 2
                        .list__text--status
                          .status-trading
                            %span
                            = product.status.name
                      - elsif product.status.id == 6
                        .list__text--status
                          .status-sending
                            %span
                            = product.status.name
                    = icon 'fas', 'chevron-right'
            %li.content__lists--all
              = link_to '', {class: 'mypage__lists'} do
                一覧をみる
        - else
          %ul.content__lists.show
            %li.content__lists__list--notfound
              %span 現在、やることリストはありません
      

  =render 'users/sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'