= render 'shared/header'

-# 出品中

.nav
  %ul.nav__lists
    %li.nav__lists__list
      = link_to root_path do
        %span メルカリ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--mypage
      %span マイページ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--exhibiting
      %span 出品した商品-出品中


.exhibiting.clearfix
  .exhibiting__right
    .exhibiting__right--header
      %h2 出品した商品
    .exhibiting__right--content
      %ul.exhibiting-content__tabs
        %li.content__tabs.active
          %h3
            出品中
        %li.content__tabs
          %h3
            取引中
        %li.content__tabs
          %h3
            売却済み
      .exhibiting-content__lists
        - if @products.any?
          %ul.content__lists
            %li.content__lists--list
              - @products.each do |product|
                .list
                  .list__image
                    = image_tag product.image
                  .list__text
                    .list__text--name
                      = product.name
                    .list__text--status
                      %span
                        出品中
                  = icon 'fas', 'chevron-right'
            %li.content__lists--all
              = link_to '', {class: 'mypage__lists'} do
                一覧をみる
        - else
          %ul.content__lists.show
            %li.content__lists__list--notfound
              %span 現在、やることリストはありません
      

  =render 'users/sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'