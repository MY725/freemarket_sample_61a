= render 'shared/header'

-# 取引中

.nav
  %ul.nav__lists
    %li.nav__lists__list
      = link_to root_path do
        %span メルカリ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--mypage
      %span マイページ
      = icon 'fas', 'chevron-right', class: 'nav__lists__list--icon'
    %li.nav__lists__list.nav__lists__list--exhibiting
      %span 購入した商品-取引中


.purchase.clearfix
  .purchase__right
    .purchase__right--header
      %h2 購入した商品
    .purchase__right--content
      %ul.purchase-content__tabs
        %li.content__tabs.active
          %h3
            取引中
        %li.content__tabs
          = link_to purchased_products_path do
            %h3
              過去の取引
      .purchase-content__lists
        - if @products.any?
          %ul.content__lists
            %li.content__lists--list
              - @products.each do |product|
                - if product.status.id == 2
                  .list
                    .list__image
                      = image_tag product.image
                    .list__text
                      .list__text--name
                        = product.name
                      - if product.status.id == 2
                        .list__text--status
                          .status-trading
                            %span
                            = product.status.name
                    = icon 'fas', 'chevron-right'
            %li.content__lists--all
              = link_to '', {class: 'mypage__lists'} do
                一覧をみる
        - else
          %ul.content__lists.show
            %li.content__lists__list--notfound
              %span 現在、やることリストはありません
      

  =render 'users/sidebar'

= render 'shared/sellbutton'

= render 'shared/appbanner'

= render 'shared/footer'